{
  "name": "demo",
  "version": "1.0.0",
  "description": "This application is used to demonstrate Radius basics as part of our 'first application' tutorial.",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:client": "node build-client.js",
    "build:server": "rimraf ./dist && rimraf ./www && tsc",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "node start-client.js",
    "start:server": "npm run build && node dist/main.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@azure/monitor-opentelemetry": "^1.15.1",
    "@dapr/dapr": "^3.6.1",
    "@types/mongodb": "^4.0.7",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.16.0",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^11.0.0",
    "bootstrap": "^5.3.8",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "mongodb": "^7.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.18.0",
    "redis": "^5.10.0",
    "uuid": "^13.0.0"
  }
}
